@model Đồ_án_Web.Models.Product

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/Master_Layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/FRONTEND/Master_Layout.css" rel="stylesheet" />
    <link href="~/Content/FRONTEND/Product_Detail.css" rel="stylesheet" />
    <script src="~/Scripts/FRONTEND/Product_Detail.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="scale">
        <!--~~~~~~~~~~~~~~~~~~~~~PRODUCT-DETAIL~~~~~~~~~~~~~~~~~~~~~-->

        <h1 id="product-title">@Model.ProName</h1>
        <div class="product-detail">
            <div class="product-left">
                <img id="product-image" src="@Url.Content(Model.ProImage)" alt="Product Image" />
            </div>
            <div class="product-right">
                <p>Gíá tại Hồ Chí Minh</p>
                <h1>Kích cỡ</h1>
                <p>@Model.ProDetail.Size</p>
                <h1>Mô Tả</h1>
                <p id="product-description">@Model.ProDetail.ProDecription</p>
                <h1>Giá thành</h1>
                <strong id="product-price">@Model.ProDetail.Price</strong>

                <div class="buy-now-box" id="buyNowBox">
                    <strong class="buy-now-text">MUA NGAY</strong>
                </div>

                <div class="dialog-container" id="dialogContainer">
                    <div class="dialog-box">
                        <p>Bạn đã quyết định mua sản phẩm ?</p>
                        <div class="dialog-buttons">
                            <button id="btnYes">Đúng</button>
                            <button id="btnNo">Không</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

